<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe4ee">

    <ImageView
        android:id="@+id/heartspingquestion"
        android:layout_width="210dp"
        android:layout_height="168dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="492dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/heartsping" />

    <ImageView
        android:id="@+id/yesquestion"
        android:layout_width="410dp"
        android:layout_height="85dp"
        android:layout_marginBottom="228dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/buttonshape" />

    <ImageView
        android:id="@+id/retrybar"
        android:layout_width="410dp"
        android:layout_height="85dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/buttonshape" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="268dp"
        android:fontFamily="@font/bm"
        android:gravity="center"
        android:text="나는 회복 탄력성이 좋다"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/firstyes"
        android:layout_width="210dp"
        android:layout_height="54dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="244dp"
        android:background="#00ff0000"
        android:gravity="center"
        android:text="YES"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/firstno"
        android:layout_width="210dp"
        android:layout_height="54dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="136dp"
        android:background="#00ff0000"
        android:gravity="center"
        android:text="NO"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>